<%= render partial: 'messages/msg' %>
<div class="container" style="padding-top:50px">


<h1 style="color: #ffc800;">My Reviews</h1><br>

<% if @user.open_for_review_reservations != [] && @user.open_for_review_reservations != nil %>
  <p style="color: white;">You have open for review reservations: <%= link_to "New Review", new_review_path %></p><br>
<% elsif @reviews.empty? %>
  <p style="color: white;">You don't currently have open for review reservations. Reviews open one day after a reservation's checkout date.</p><br>
<% end %>

<% if !@reviews.empty? %>
  <ul style="color: white;">
    <% @reviews.each do |review| %>
      <li style="color: white;">
        <h3 style="color: #ffc800;"><%= review.reservation.hotel.name %></h3>
        <p style="color: white;"><%= review.reservation.hotel.city.name %></p>
        <%# <%= render 'reservations/info_no_links', :reservation => review.reservation %>
        <h4 style="color: white;">Review description:</h4>
        <%= review.description %><br>
        <%= link_to 'Show review', review_path(review) %><br><br>
      </li>
    <% end %>
  </ul>
<% end %>
</div>
